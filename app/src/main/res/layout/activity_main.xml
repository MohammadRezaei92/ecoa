<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="rezaei.mohammad.ecoa.ui.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:fitsSystemWindows="true"
        android:background="@drawable/gradient_background"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:layoutDirection="rtl"
            app:titleEnabled="false"
            app:expandedTitleMarginBottom="24dp"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleMarginEnd="24dp"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="enterAlways"
            app:toolbarId="@+id/toolbar">


            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:rotation="32"
                android:tint="@color/white"
                android:alpha="0.13"
                android:layout_gravity="left"
                app:srcCompat="@drawable/ic_calculator"/>

            <LinearLayout
                android:id="@+id/layResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="16dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:layoutDirection="ltr">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:gravity="right"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:layout_marginRight="8dp"
                        android:text="تومان"
                        android:layout_weight="1"/>

                    <com.daasuu.cat.CountAnimationTextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:gravity="right"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:layout_marginRight="8dp"
                        android:text="0" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/white_100"
                        app:srcCompat="@drawable/ic_attach_money"/>
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:layoutDirection="ltr">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:gravity="right"
                        android:layout_marginRight="8dp"
                        android:text="ساعت"
                        android:layout_weight="1"/>

                    <com.daasuu.cat.CountAnimationTextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:gravity="right"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:layout_marginRight="8dp"
                        android:text="0" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/white_100"
                        app:srcCompat="@drawable/ic_access_time"/>

                </LinearLayout>

            </LinearLayout>


        <!--<android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title=""
            app:popupTheme="@style/AppTheme.PopupOverlay" />-->

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />

</android.support.design.widget.CoordinatorLayout>
